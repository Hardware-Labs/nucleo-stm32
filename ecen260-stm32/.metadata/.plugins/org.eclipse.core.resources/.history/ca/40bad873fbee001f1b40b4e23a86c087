
#include "drivers.h"


////////////////////////////////////////////////////////////////////////////////////////////////////////////
// This program blinks LD2 (PA5)
////////////////////////////////////////////////////////////////////////////////////////////////////////////
int main(void) {
	//Turn on GPIO clock for Port A
	GPIOA_ClkEnable();

	// Configure LD2 as output
	GPIO_Mode(GPIOA, 5, GPIO_MODE_OUTPUT);

	while(1) {
		// toggle LED
		GPIO_Toggle(GPIOA, 5);

		// delay
		for (int i = 0; i < 80000; i++);
	}
}

